{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "baseUrl": ".",
        "paths": {
            "@ng-holistic/ramda": ["libs/core/src/lib/r.ts"],
            "@ng-holistic/core": ["libs/core/src/lib/index.ts"],
            "@ng-holistic/forms": ["libs/forms/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
